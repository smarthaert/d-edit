Unit About;

Interface

Uses TPCrt, TPWindow;

{ --- Помощь --- }
Procedure Help;
{ --- Информация о программе --- }
Procedure AboutProg;

Implementation

{ --- Помощь --- }
Procedure Help;
  Var Window : WindowPtr;
  Begin
    MakeWindow(Window, 1, 4, 80, 25, True, True, False, $04, $07, $0F,
               'Помощь');
    DisplayWindow(Window);
    TextColor(11);
    WriteLn('Программа "Полином" предназначена для работы с многочленами.');
    WriteLn('Раздел "Полином" состоит из следующих подменю:');
    TextColor(15);
    Write('I) "Ввод нового".При его выборе нужно задать имя, длина которого не может пре-');
    WriteLn('вышать 17 символов. Добавление члена происходит при нажатии "ENTER" на выде-');
    Write('ленном "Степень/Коэффициент". Редактирование некоторого коффициента происходит');
    Write('при нажатии "ENTER" на нужных коэф. и степени. Степень не должна быть дробной,');
    WriteLn('больше 65535 и меньше 0. Коэффициент - не должен превышать  53 символов.');
    WriteLn('II) "Вывод". Перед выводом нужно ввести имя нужного полинома.');
    WriteLn('III) "Удаление". Перед удалением нужно ввести имя нужного полинома.');
    WriteLn('IV) "Удаление всех". Удаление всего списка полиномов.');
    WriteLn('V) "Редактирование".Изменение  и добавление новых степени и коэффициента у');
    WriteLn('любого члена. (Далее аналогично пункту "Ввод нового")');
    WriteLn;
    TextColor(11);
    WriteLn('Раздел "Действия" состоит из следующих подменю:');
    TextColor(15);
    WriteLn('I,II) "Сложение" и "Вычитание" 2-х полиномов. Вводятся их имена и название по-линома-суммы.');
    WriteLn('III) Сортировка". Применяется,если многочлен был введен неупорядоченно относи-тельно степени.');
    TextColor(7);
    WriteLn;
    Write('                          <Нажмите любую клавишу>');
    readkey;
    KillWindow(Window);
  End;

